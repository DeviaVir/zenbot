<div class="ticker-graph"></div>
<form class="options" onchange="javascript:this.submit()">
<select name="exchange">
{{#each exchanges}}
<option value="{{exchange}}"{{#if is_default}} selected{{/if}}>{{exchange}}</option>
{{/each}}
</select>
<select name="period">
{{#each tick_sizes}}
<option value="{{size}}"{{#if is_default}} selected{{/if}}>{{size}}</option>
{{/each}}
</select>
<select name="limit">
{{#each graph_limits}}
<option value="{{limit}}"{{#if is_default}} selected{{/if}}>{{limit}}</option>
{{/each}}
</select> <i class="loading fa fa-spinner fa-pulse fa-fw"></i>
</form>